    <Frame name="fhmConfigFrameStrat" hidden="true" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true">
        <Size>
            <AbsDimension x="450" y="470"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <Button name="$parentLoadText" hidden="false" inherits="UIPanelButtonTemplate" text="6 TANKS STRAT">
                <Size>
                    <AbsDimension x="120" y="21"/>
                </Size>
                <Color r="1" g="0" b="1" a="0.5"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-5" y="-7"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        SelectedStrat6Tanks()
                    </OnClick>

                </Scripts>
            </Button>
            

            <Button name="$parentLoadText" hidden="false" inherits="UIPanelButtonTemplate" text="8 TANKS REGULAR STRAT">
                <Size>
                    <AbsDimension x="200" y="21"/>
                </Size>
                <Color r="1" g="0" b="1" a="0.5"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="3" y="-7"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        SelectedStrat8Tanks()
                    </OnClick>

                </Scripts>
            </Button>

        </Frames>
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
                this:SetMovable(1);
                this:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
                this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
                this.isMoving = false;
            </OnDragStop>
        </Scripts>       
    </Frame>









